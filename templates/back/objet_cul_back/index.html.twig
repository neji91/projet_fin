{% extends 'base.html_back.twig' %}


{% block title %}Object_cul{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center">
    <h1>Object_cul</h1>
    <a href="{{ path('objetCul_new') }}" class="btn btn-info">Nouveau</a>
</div>

<table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Région</th>
                <th>catégorie</th>
                <th>description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for objetCul in objetCuls %}
            <tr>
                <td>{{ objetCul.id }}</td>
                <td>{{ objetCul.name }}</td>
                <td><img src="{{ asset('images/objetCuls/' ~ objetCul.image) }}" alt="" class="img-back"></td>
                <td>{{ objetCul.region }}</td>
                <td>{{ objetCul.categorie }}</td>
                <td>{{ objetCul.description }}</td>
                <td>
                    <div class="d-flex">
                    <a href="{{ path('objetCul_show', {'id': objetCul.id}) }}" class="btn btn-info me-2"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('objetCul_edit', {'id': objetCul.id}) }}" class="btn btn-info"><i class="fas fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
