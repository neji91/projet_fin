{% extends 'base.html.twig' %}

{% block title %}Departement{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center">
    <h1>Departement</h1>
    <a href="{{ path('departement_new') }}" class="btn btn-info">Nouveau</a>
</div>

<table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Code postal</th>
                <th>RÃ©gion</th>
            </tr>
        </thead>
        <tbody>
        {% for departement in departements %}
            <tr>
                <td>{{ departement.id }}</td>
                <td>{{ departement.name }}</td>
                <td>{{ departement.cp }}</td>
                <td>{{ departement.regionid }}</td>
                <td>
                    <div class="d-flex">
                    <a href="{{ path('departement_show', {'id': departement.id}) }}" class="btn btn-info me-2"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('departement_edit', {'id': departement.id}) }}" class="btn btn-info"><i class="fas fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
